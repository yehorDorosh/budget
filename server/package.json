{
  "name": "app-budget-server",
  "version": "0.1.0",
  "description": "App for log yours expenses and income. Based TS, NodeJS, PostgreSQL.",
  "main": "index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "npm-run-all --parallel watch:build watch:server",
    "build": "NODE_ENV=production webpack",
    "watch:build": "NODE_ENV=development webpack",
    "watch:server": "NODE_ENV=development nodemon ./build/index.js",
    "lint": "eslint --ext .js,.ts src/",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yehorDorosh/budget.git"
  },
  "keywords": [
    "budget"
  ],
  "author": "Egor Dorosh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yehorDorosh/budget/issues"
  },
  "homepage": "https://github.com/yehorDorosh/budget#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.3.1"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/express-validator": "^3.0.0",
    "@types/nodemailer": "^6.4.9",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jose": "^4.14.4",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  }
}
